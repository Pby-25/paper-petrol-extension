{
    "name": "PaperPetrol",
    "version": "0.0.1",
    "description": "Extension for PaperPetrol.com",
    "permissions": [
      "storage", 
      "tabs",
      "*://*.google.com/maps/*",
      "*://localhost/*",
      "*://*.paperpetrol.com/*"
    ],
    "externally_connectable": {
      "matches": [
        "*://localhost/*",
        "*://*.paperpetrol.com/*"
      ]
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "manifest_version": 2
  }